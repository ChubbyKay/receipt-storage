<h1>Tags</h1>
<a href='/receipts'>Receipts</a> |
<a href='/tags'>Tags</a>
<br />
<br />
<div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded shadow-sm">
  {{#if tag}}
  <form action="/tags/{{tag.id}}?_method=PUT" method="POST">
    <input type="text" placeholder="name" name="name" value="{{tag.name}}">
    <button type="submit">Update</button>
    <a href="/tags">or Create New</a>
  </form>
  {{else}}
  <form action="/tags" method="POST">
    <input type="text" placeholder="name" name="name">
    <button type="submit">Submit</button>
  </form>
  {{/if}}
</div>
<br />
<br />
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Tag Name</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each tags}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>
        <button type="button" class="btn btn-link">
          <a href="/tags/{{this.id}}">
            Edit
          </a>
        </button>
        <form action="/tags/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
